<%- include('../admin/partials/aheader.ejs') %>

  <div class="container-fluid mt-2 text-center">
   
    <div class="col-md-12">
      <div class="main-card mb-3 card">
        
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
          <div class="bg-dark  border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">orders</h6>
          </div>
        </div>
        <form action="/admin/salesReport" method="post" class="mt-3">
          <input type="date" name="startDate">
          <input type="date" name="endDate">
          <input type="submit" value="submit">
        </form>
        <div class="table-responsive p-4">
          <table class="align-middle mb-0 table table-borderless table-striped table-hover" id="">
            <thead>
              <tr>
                <th>order no:</th>
                <th>user address</th>
                <th>product Cost</th>
                <th>payment Mode</th>
                <th>deliver Date</th>
              </tr>
            </thead>
            <tbody>


             
              <% orderData.forEach((data,i)=>{ %>
                <tr>
                  <td class="text-center text-muted">
                   <%= i+1 %>
                  </td>
                  <td>
                    <div class="widget-content p-0">
                      <div class="widget-content-wrapper">
                        <div class="widget-content-left mr-3">
                          <div class="widget-content-left">
                            <%= data.address_id.name %>
                          </div>
                        </div>
                        
                      </div>
                    </div>
                  </td>

                  <td class="text-center">
                    <%= data.totalPrice %>
                  </td>
                  <td class="text-center">
                    <%= data.paymentMethod %>
                  </td>
                  <td class="text-center">
                    <%= data.deliveryDate.toDateString() %>
                  </td>

                  
                </tr>
             <% }) %>
                

              
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  

  <%- include('../admin/partials/afooter.ejs') %>