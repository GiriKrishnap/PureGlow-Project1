<%- include('../admin/partials/aheader.ejs') %>

  <div class="container-fluid mt-4 text-center">
    <div class="main-card card">

      <div class="bg-dark  border-radius-lg pt-4 pb-3">
        <h5 class="text-white text-capitalize ps-3">orders</h5>
      </div>

      <form action="/admin/salesReport" method="post" class="mt-3">
        <input type="date" name="startDate">
        <input type="date" name="endDate">
        <input type="submit" class="btn btn-info mt-2" value="Print">
      </form>

      <div class="table-responsive p-4">
        <table class="table table-hover" id="">
          <thead>
            <tr>
              <th>order no:</th>
              <th>user address</th>
              <th>product Cost</th>
              <th>payment Mode</th>
              <th>deliver Date</th>
            </tr>
          </thead>
          <tbody>

            <% orderData.forEach((data,i)=>{ %>
              <tr>

                <td class="text-center text-muted">
                  <%= i+1 %>
                </td>

                <td>
                  <%= data.address_id.name %>
                </td>

                <td class="text-center">
                  <%= data.totalPrice %>
                </td>

                <td class="text-center">
                  <%= data.paymentMethod %>
                </td>

                <td class="text-center">
                  <%= data.deliveryDate.toDateString() %>
                </td>

              </tr>

              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%- include('../admin/partials/afooter.ejs') %>