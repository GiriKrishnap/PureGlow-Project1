                                                    <%= data.state %>
                                                </label><br>
                                                <label for="" value="dist">
                                                    <%= data.district %>
                                                </label><br>
                                                <label for="" value="city">
                                                    <%= data.city %>
                                                </label><br>
                                                <label for="" value="landMark">
                                                    <%= data.landMark %>
                                                </label><br>
