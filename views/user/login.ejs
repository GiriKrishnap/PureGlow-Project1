<%- include('../user/partials/header.ejs'); %>

  <!DOCTYPE html>
  <html lang="en">

  <head>
    <meta charset="UTF-8">
    <title>pureGlow | by Giri</title>
    <link rel="shortcut icon" href="/images/user/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="/stylesheets/user/signupstyle.css">
    <!-- Font Awesome Cdn Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <style>
      .m {
        font-size: 13px;
      }
    </style>
  </head>

  <body>
    <div class="wrapper">
      <h1>Hello!<br><span class="toggle-password" onclick="togglePasswordVisibility()"><i
            class="fa-solid fa-face-smile"></i></span></h1>
      <p>Welcome back you've <br> been missed!</p>

      <form action="/login" method="post">
        <input type="email" placeholder="Email" name="email" required>
        <input type="password" placeholder="Password" id="passwordInput" name="password" maxlength="8" required>
        <p class="recover">
          <a href="/enter-email">Forgot Password</a>
        </p>
        <% if(typeof message !=='undefined' ){ %>
          <p style="color: rgb(247, 0, 0);font-size: 19px; margin-top: 10px;">
            <%= message %>
          </p>
          <% } %>
            <button type="submit" value="login">Login in</button>
            <br>
            <p class="m-1 m">(Click the emoji)</p>
      </form>

      <div class="not-member">
        New To Our Family? <a href="/signup">Join Now</a>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/7d9bb2077c.js" crossorigin="anonymous"></script>
    <script>
      // Function to toggle password visibility
      function togglePasswordVisibility() {
        const passwordInput = document.getElementById('passwordInput');
        const icon = document.querySelector('.toggle-password i');

        if (passwordInput.type === 'password') {
          passwordInput.type = 'text';
          icon.classList.remove('fa-face-smile');
          icon.classList.add('fa-face-flushed');
        } else {
          passwordInput.type = 'password';
          icon.classList.remove('fa-face-flushed');
          icon.classList.add('fa-face-smile');
        }
      }
    </script>
  </body>

  </html>

  <%- include('../user/partials/footer.ejs'); %>