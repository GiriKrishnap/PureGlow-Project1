<%- include('../user/partials/header.ejs'); %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <title>pureGlow | by Giri</title>
        <link rel="shortcut icon" href="/images/user/favicon.png" type="image/x-icon">
        <link rel="stylesheet" href="/stylesheets/user/signupstyle.css">
        <!-- Font Awesome Cdn Link -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
        <style>
            input[type="number"]::-webkit-inner-spin-button,
            input[type="number"]::-webkit-outer-spin-button {
                -webkit-appearance: none;
                margin: 0;
            }

            input[type="number"] {
                -moz-appearance: textfield;
            }
        </style>
    </head>

    <body>
        <div class="wrapper">
            <h1>HelloğŸ˜</h1>
            <p>Put Your<br>Address Here</p>
            
            <form action="/edit-address" method="post">
                <input type="text" placeholder="Fullname" name="name" value="<% if(userAddress){ %><%= userAddress.name%><% } %>" required>
                <input type="email" placeholder="email" name="email" value="<% if(userAddress){ %><%= userAddress.email%><% } %>" required>
                <input type="number" placeholder="PhoneNumber" name="phone" id="number" value="<% if(userAddress){ %><%= userAddress.phone%><% } %>" required>
                <textarea class="p-2 border-0 rounded" name="address" id="" cols="31" rows="2"
                    placeholder="address(area and street)" style="background-color: RGB(223, 233, 245);"><% if(userAddress){ %><%= userAddress.address%><% } %></textarea>
                <input type="text" placeholder="state" name="state" value="<% if(userAddress){ %><%= userAddress.state%><% } %>" required>
                <input type="text" placeholder="district" name="district" value="<% if(userAddress){ %><%= userAddress.district%><% } %>" required>
                <input type="text" name="landMark" placeholder="landMark" value="<% if(userAddress){ %><%= userAddress.landMark%><% } %>" required>
                <input type="text" placeholder="city" name="city" value="<% if(userAddress){ %><%= userAddress.city%><% } %>" required>
                <input type="number" id="number" placeholder="pincode" name="pincode" value="<% if(userAddress){ %><%= userAddress.pincode%><% } %>" required>




                <% if(typeof message !=='undefined' ){ %>
                    <p style="color: rgb(247, 0, 0);font-size: 19px; margin-top: 10px;">
                        <%= message %>
                    </p>
                    <% } %>

                        <button type="submit" value="submit">Submit</button>
            </form>

            <div class="not-member">
                Go Home? <a href="/home">Back</a>
            </div>
        </div>
        <script src="/javascripts/user/signupValidation.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    </body>

    </html>
    <%- include('../user/partials/footer.ejs'); %>