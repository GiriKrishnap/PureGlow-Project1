<%- include('../user/partials/header2.ejs'); %>


    <!-- my account wrapper start -->
    <div class="my-account-wrapper mt-no-text mb-5">
        <div class="container container-default-2 custom-area">
            <div class="row">
                <div class="col-lg-12 col-custom">
                    <!-- My Account Page Start -->
                    <div class="myaccount-page-wrapper">
                        <!-- My Account Tab Menu Start -->
                        <div class="row">
                            <div class="col-lg-3 col-md-4 col-custom">
                                <div class="myaccount-tab-menu nav" role="tablist">
                                    <a href="#dashboad" class="active" data-bs-toggle="tab"><i
                                            class="fa fa-dashboard"></i>
                                        Dashboard</a>
                                    <a href="#orders" data-bs-toggle="tab"><i class="fa fa-cart-arrow-down"></i>
                                        Orders</a>
                                    <a href="#wallet" data-bs-toggle="tab"><i class="fa fa-credit-card"></i> Wallet</a>
                                    <a href="#address-edit" data-bs-toggle="tab"><i class="fa fa-map-marker"></i>
                                        address</a>
                                    <a href="#account-info" data-bs-toggle="tab"><i class="fa fa-user"></i> Account
                                        Details</a>
                                    <a href="/logout"><i class="fa fa-sign-out"></i> Logout</a>
                                </div>
                            </div>
                            <!-- My Account Tab Menu End -->

                            <!-- My Account Tab Content Start -->
                            <div class="col-lg-9 col-md-8 col-custom">
                                <div class="tab-content" id="myaccountContent">
                                    <!-- Single Tab Content Start -->
                                    <div class="tab-pane fade show active" id="dashboad" role="tabpanel">
                                        <div class="myaccount-content">
                                            <h3>Dashboard</h3>
                                            <div class="welcome">
                                                <p>Hello, <strong class="text-primary text-uppercase text-wrap">
                                                        <% if(typeof userName !=='undefined' ){ %>

                                                            <%= userName %>

                                                                <% } %>
                                                    </strong></p>
                                            </div>
                                            <p class="mb-0">From your account dashboard. you can easily check & view
                                                your recent orders, manage your shipping and billing addresses and edit
                                                your password and account details.</p>
                                        </div>
                                    </div>
                                    <!-- Single Tab Content End -->

                                    <!-- Single Tab Content Start -->
                                    <div class="tab-pane fade" id="orders" role="tabpanel">
                                        <div class="myaccount-content">
                                            <h3>Orders</h3>
                                            <div class="text-center">
                                                <% if(orderData ){ %>
                                                    <% orderData.forEach((data,index)=> { %>
                                                        <div class="card m-3">
                                                            <div class="card-body">
                                                                <% for (let i=0; i < data.products.length; i++) { %>
                                                                    <div
                                                                        class="d-flex justify-content-start justify-content-between">
                                                                        <img src="/images/<%= data.products[i].product_id.images[0] %>"
                                                                            width="60" height="60" class="m-2"
                                                                            style="border-radius: 3px;"><br>
                                                                        <div class="mt-3">
                                                                            <p>
                                                                                <%= data.products[i].product_id.productName
                                                                                    %> x <%= data.products[i].quantity
                                                                                        %>
                                                                            </p>
                                                                        </div>
                                                                        <div class="mt-3"><i
                                                                                class="bi bi-currency-rupee"></i>
                                                                            <%= data.products[i].price %>
                                                                        </div>
                                                                        <div class="mt-1">
                                                                            <% if (data.status==='delivered' ) { %>
                                                                                <p
                                                                                    class="text-success font-weight-bold">
                                                                                    Delivered on </p>
                                                                                <%= data.deliveryDate.toDateString() %>
                                                                                    <% } else
                                                                                        if(data.status==='cancelled' ){
                                                                                        %>
                                                                                        <p
                                                                                            class="text-danger font-weight-bold">
                                                                                            Cancelled on</p><strong>
                                                                                            <%= data.deliveryDate.toDateString()
                                                                                                %>
                                                                                        </strong>
                                                                                        <% } else {%>
                                                                                            <p
                                                                                                class="text-primary font-weight-bold">
                                                                                                Delivery expect on</p>
                                                                                            <%= data.deliveryDate.toDateString()
                                                                                                %>
                                                                                                <%} %>
                                                                        </div>
                                                                        <!-- More button -->
                                                                        <div class="mt-3">

                                                                        </div>

                                                                    </div>
                                                                    <div>

                                                                    </div>
                                                                    <p>

                                                                    </p>
                                                                    <div class="collapse mb-4"
                                                                        id="collapseExample<%= index %>">
                                                                        <div class="card card-body">
                                                                            <div class="modal-body">
                                                                                <h3>Product details</h3>
                                                                                <strong>Name: </strong>
                                                                                <%= data.products[i].product_id.productName
                                                                                    %> <br>
                                                                                    <strong>Price: </strong><i
                                                                                        class="bi bi-currency-rupee"></i>
                                                                                    <%= data.products[i].product_id.price
                                                                                        %> <br>
                                                                                        <strong>Discount: </strong>
                                                                                        <%= data.products[i].product_id.discount
                                                                                            %>% <br><br>
                                                                                            <h3>Address</h3>
                                                                                            <strong>Name: </strong>
                                                                                            <%= data.address_id.name%>
                                                                                                <br>
                                                                                                <strong>Phone: </strong>
                                                                                                <%=
                                                                                                    data.address_id.phone%>
                                                                                                    <br>
                                                                                                    <strong>Email:
                                                                                                    </strong>
                                                                                                    <%=
                                                                                                        data.address_id.email%>
                                                                                                        <br>
                                                                                                        <strong>Address:
                                                                                                        </strong>
                                                                                                        <%=
                                                                                                            data.address_id.address%>
                                                                                                            <br>
                                                                                                            <strong>State:
                                                                                                            </strong>
                                                                                                            <%=
                                                                                                                data.address_id.state%>
                                                                                                                <br>
                                                                                                                <strong>District:
                                                                                                                </strong>
                                                                                                                <%=
                                                                                                                    data.address_id.district%>
                                                                                                                    <br>
                                                                                                                    <strong>City:
                                                                                                                    </strong>
                                                                                                                    <%=
                                                                                                                        data.address_id.city%>
                                                                                                                        <br>
                                                                                                                        <strong>landMark:
                                                                                                                        </strong>
                                                                                                                        <%=
                                                                                                                            data.address_id.landMark%>
                                                                                                                            <br>
                                                                                                                            <strong>Pincode:
                                                                                                                            </strong>
                                                                                                                            <%=
                                                                                                                                data.address_id.pincode%>
                                                                                                                                <br>
                                                                            </div>
                                                                        </div>
                                                                        <div class="mt-2">
                                                                            <% if(data.status !=='delivered' &&
                                                                                data.status !=='cancelled' ){%> <a
                                                                                    href="/cancel-order?id=<%=data._id%>"><button
                                                                                        type="button"
                                                                                        class="btn-danger p-2">Cancel</button></a>
                                                                                <%} %>
                                                                        </div>
                                                                    </div>

                                                                    <% } %>
                                                            </div>
                                                            <button class="p-2 m-2 rounded d-flex justify-content-end"
                                                                type="button" data-toggle="collapse"
                                                                data-target="#collapseExample<%= index %>"
                                                                aria-expanded="false"
                                                                aria-controls="collapseExample<%= index %>"
                                                                style="background-color: #5580dd;">
                                                                <p class="m-1 text-white">More Info</p>
                                                            </button>
                                                        </div>

                                                        <% }) %>

                                                            <% } %>

                                            </div>
                                        </div>
                                    </div>

                                    <!-- Single Tab Content End -->

                                    <!-- Single Tab Content Start -->

                                    <!-- Single Tab Content End -->

                                    <!-- Single Tab Content Start -->
                                    <div class="tab-pane fade" id="wallet" role="tabpanel">
                                        <div class="myaccount-content">
                                            <h3>Payment Method</h3>
                                            <p class="saved-message">You Can't Saved Your Payment Method yet.</p>
                                        </div>
                                    </div>
                                    <!-- Single Tab Content End -->

                                    <!-- Single Tab Content Start -->
                                    <div class="tab-pane fade" id="address-edit" role="tabpanel">
                                        <a href="/add-address"><button
                                                class="btn flosun-button secondary-btn rounded-0 mb-3">Add New
                                                Address</button></a>
                                        <% if(addressData){ %>
                                            <% addressData.forEach((data,index)=> { %>
                                                <div class="myaccount-content">
                                                    <h3>Your Address</h3>
                                                    <address>
                                                        <p><strong>
                                                                Name: <%= data.name%>
                                                            </strong></p>
                                                        <p>
                                                            <strong>Email:</strong>
                                                            <%=data.email %><br>
                                                                <strong>Mobile:</strong>
                                                                <%=data.phone %><br>
                                                                    <strong>Address:</strong>
                                                                    <%=data.address %><br>
                                                                        <strong>State:</strong>
                                                                        <%=data.state %><br>
                                                                            <strong>District:</strong>
                                                                            <%=data.district %><br>
                                                                                <strong>City:</strong>
                                                                                <%=data.city %><br>
                                                                                    <strong>LandMark:</strong>
                                                                                    <%=data.landMark %><br>
                                                                                        <strong>Pincode:</strong>
                                                                                        <%=data.pincode %><br>
                                                        </p>
                                                    </address>
                                                    <a href="/edit-address"
                                                        class="btn flosun-button secondary-btn theme-color  rounded-0"><i
                                                            class="fa fa-edit mr-2"></i>Edit</a>
                                                    <a href="/delete-address?id=<%= data._id %>"
                                                        class="btn flosun-button secondary-btn theme-color  rounded-0"><i
                                                            class="fa fa-edit mr-2"
                                                            onclick="return confirmAlert(event, '/delete-address?id=<%= data._id %>')"></i>Delete
                                                        Address</a>
                                                </div>
                                                <% }); %>
                                                    <% } %>
                                    </div>
                                    <!-- Single Tab Content End -->

                                    <!-- Single Tab Content Start -->

                                    <% if(typeof userData !=='undefined' ){ %>




                                        <div class="tab-pane fade" id="account-info" role="tabpanel">
                                            <div class="myaccount-content">
                                                <h3>Account Details</h3>
                                                <div class="account-details-form">
                                                    <form action="#">

                                                        <div class="single-input-item mb-3">
                                                            <label for="display-name" class="required mb-1">Full
                                                                Name</label>
                                                            <input type="text" id="display-name" placeholder="Full Name"
                                                                value="<%= userData.name%>" readonly />
                                                        </div>

                                                        <div class="single-input-item mb-3">
                                                            <label for="display-name"
                                                                class="required mb-1">Phone</label>
                                                            <input type="text" id="display-name" placeholder="Phone"
                                                                value="<%= userData.phone%>" readonly />
                                                        </div>

                                                        <div class="single-input-item mb-3">
                                                            <label for="email" class="required mb-1">Email
                                                                Address</label>
                                                            <input type="email" id="email" placeholder="Email Address"
                                                                value="<%= userData.email%>" readonly />
                                                        </div>
                                                        <a href="/edit-details"
                                                            class="btn flosun-button secondary-btn rounded-0">EDIT DATA
                                                        </a>
                                                        <fieldset>
                                                            <legend>Password change</legend>
                                                            <div class="single-input-item mb-3">
                                                                <label for="current-pwd" class="required mb-1">Want to
                                                                    Change Password ?</label>
                                                            </div>

                                                        </fieldset>
                                                        <div class="single-input-item single-item-button">
                                                            <a href="/enter-email"
                                                                class="btn flosun-button secondary-btn rounded-0">CHANGE
                                                            </a>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div> <!-- Single Tab Content End -->

                                        <% } %>
                                </div>
                            </div> <!-- My Account Tab Content End -->
                        </div>
                    </div> <!-- My Account Page End -->
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
    <script>
        function confirmAlert(event, linkUrl) {
            // Prevent the default link behavior
            event.preventDefault();

            // Show the SweetAlert confirmation dialog
            swal({
                title: 'Are you sure?',
                text: 'Are you sure you want to Delete this ?',
                icon: 'warning',
                buttons: ['Cancel', 'OK'],
            }).then((value) => {
                if (value) {
                    // If the user clicks "OK," proceed with following the link
                    window.location.href = linkUrl;
                }
            });
        }
    </script>

    <!-- my account wrapper end -->
    <%- include('../user/partials/footer2.ejs'); %>